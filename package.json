{
  "name": "relpath-snippet-helper",
  "displayName": "RelPath Snippet Helper",
  "description": "Quickly insert or copy the workspace-relative file path; optionally insert a language-aware header comment.",
  "version": "0.1.1",
  "publisher": "Ideas2Byte",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "keywords": ["path", "relative", "header", "comment", "status bar"],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#0f172a",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thewhisperinyourears/relpath-snippet-helper"
  },
  "bugs": {
    "url": "https://github.com/thewhisperinyourears/relpath-snippet-helper/issues"
  },
  "homepage": "https://github.com/thewhisperinyourears/relpath-snippet-helper",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:relpath.insertAtCursor",
    "onCommand:relpath.insertHeader",
    "onCommand:relpath.copyRelativePath"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "relpath.insertAtCursor",
        "title": "RelPath: Insert relative path at cursor"
      },
      {
        "command": "relpath.insertHeader",
        "title": "RelPath: Insert header comment with relative path"
      },
      {
        "command": "relpath.copyRelativePath",
        "title": "RelPath: Copy relative path"
      }
    ],
    "keybindings": [
      {
        "command": "relpath.insertAtCursor",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "relpath.insertAtCursor",
          "group": "navigation@9"
        },
        {
          "when": "editorTextFocus",
          "command": "relpath.copyRelativePath",
          "group": "navigation@9"
        },
        {
          "when": "editorTextFocus",
          "command": "relpath.insertHeader",
          "group": "navigation@9"
        }
      ]
    },
    "configuration": {
      "title": "RelPath Snippet Helper",
      "properties": {
        "relpath.label": {
          "type": "string",
          "default": "Path",
          "description": "Label shown before the path in the header comment."
        },
        "relpath.autoInsertOnOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically insert/update the header comment when you switch files."
        },
        "relpath.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show the relative path in the status bar (click to insert, Alt+click to copy)."
        },
        "relpath.includeWorkspaceFolder": {
          "type": "boolean",
          "default": true,
          "description": "Prepend the workspace folder name to the path (e.g., 'carai/cmd/main.go' instead of 'cmd/main.go')."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package",
    "dev": "tsc -w"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.5.0",
    "vsce": "^3.0.0"
  }
}
